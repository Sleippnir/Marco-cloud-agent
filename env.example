# =============================================================================
# Personal Voice Avatar - Environment Variables
# =============================================================================
# Copy to .env and fill in your values.
# For Pipecat Cloud, add API keys to a Secret Set instead.
# =============================================================================

# -----------------------------------------------------------------------------
# Daily WebRTC Transport
# -----------------------------------------------------------------------------
DAILY_API_KEY=your_daily_api_key_here
DAILY_DOMAIN=your_daily_domain

# For local development only (Pipecat Cloud provides these automatically)
DAILY_ROOM_URL=https://your-domain.daily.co/room-name
DAILY_TOKEN=

# -----------------------------------------------------------------------------
# Deepgram STT
# -----------------------------------------------------------------------------
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_MODEL=nova-3-general
DEEPGRAM_LANGUAGE=en-US

# -----------------------------------------------------------------------------
# OpenAI LLM
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Cartesia TTS
# -----------------------------------------------------------------------------
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_VOICE_ID=your_voice_id_here
CARTESIA_MODEL=sonic-3

# -----------------------------------------------------------------------------
# Simli Avatar
# -----------------------------------------------------------------------------
SIMLI_API_KEY=your_simli_api_key_here
SIMLI_FACE_ID=your_face_id_here

# -----------------------------------------------------------------------------
# RAG Configuration (LanceDB - local, embedded)
# -----------------------------------------------------------------------------
RAG_ENABLED=true
RAG_MATCH_COUNT=3
RAG_MATCH_THRESHOLD=0.5
RAG_MIN_QUERY_LENGTH=8
LANCEDB_PATH=./knowledge_base

# -----------------------------------------------------------------------------
# Bot Configuration
# -----------------------------------------------------------------------------
BOT_NAME=Marco
# SYSTEM_INSTRUCTION=  # Leave empty to use default from prompts.py

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
